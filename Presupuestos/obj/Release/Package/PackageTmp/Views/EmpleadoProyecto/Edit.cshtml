@model Presupuestos.Models.TblProyectosEmpleado

@{
    ViewBag.Title = "Modificar Empleado en proyecto";
}

<h2>Modificar Empleado en proyecto</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>TblProyectosEmpleado</h4>*@
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IDProyectoEmpleado)

        <div class="form-group">
            @Html.LabelFor(model => model.IDProyecto, "IDProyecto", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDProyecto", String.Empty)
                @Html.ValidationMessageFor(model => model.IDProyecto)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDEmpleado, "IDEmpleado", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDEmpleado", String.Empty)
                @Html.ValidationMessageFor(model => model.IDEmpleado)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
